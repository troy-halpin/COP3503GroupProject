#include <iostream>
#include <stdlib.h>
using namespace std;

int main(void){


	int x;
	cout<<"Welcome to the Personal Banking Software!"<<endl;
	cout<<endl;
	cout<<"Enter a Command: \n 1: Sign In \n 2: Sign Up \n 3: Exit Program" << endl;
	cin>>x; 

	if (x == 1){
		bool menuBool = true;
		while (menuBool) {
			User user;
			string username;
			string password;
			cout<<"Enter your username."<<endl;
			cin>>u;
			cout<<"Enter your password."<<endl;
			cin>>p;
			try {
				user = czechUser(u,p); //checkUser
			} catch (exception &e) {
				cerr << e.what() << endl;
				menuBool = false;
			}
		}

		cout << "Disclaimer: Any operations performed past this point will not be saved, unless you log out!" << endl;
		mainMenu(user);
	}
	else if (x == 2) {
		stirng name;
		string username;
		string password;
		int accountType;
		User user;
		cout<<"Enter your name."<< endl;
		cin>>name;
		cout<<"Enter your desired username."<<endl;
		cin>>username;
		cout<<"Enter your password of a minimum  of 6 characters and a maximum of 56 characters." << endl;
		cin>>password;
		cout<<"Enter account type \n 1: Checkings \n 2: Savings"<<endl;
		cin>> accountType;
		try{
			user = czechUser(name, username, password, accountType);
		} catch (exception &e){
			cerr << e.what() << endl;
		}
		mainMenu(user);
	}
	
	else if (x == 3) {
			exit(0);
		}
}

